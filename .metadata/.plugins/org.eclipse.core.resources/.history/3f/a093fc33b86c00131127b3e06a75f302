#ifndef CHARACTER_H_
#define CHARACTER_H_

#include "SHParams.h"

/**
 * \struct 	SHCharacter
 * \brief	Structure for storing complete information on a given character.
 */
typedef struct SHCharacter {
	char	name[8];
	int		alignment;
} SHCharacter;

SHCharacter* LoadCharacter(char*, char*);
void DestroyCharacter(SHCharacter*);

#endif /* CHARACTER_H_ */
